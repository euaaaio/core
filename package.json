{
  "name": "@logux/core",
  "version": "0.6.2",
  "description": "Logux core components",
  "keywords": [
    "logux",
    "core",
    "connection",
    "websocket",
    "crdt",
    "event sourcing",
    "distributed systems"
  ],
  "scripts": {
    "test": "jest --coverage && eslint . && check-dts && yaspeller *.md"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/core",
  "sideEffects": false,
  "types": "./index.d.ts",
  "engines": {
    "node": "^12.0.0 || >=14.0.0"
  },
  "dependencies": {
    "nanoevents": "^5.1.10"
  },
  "devDependencies": {
    "@logux/eslint-config": "^42.2.2",
    "@logux/sharec-config": "^0.8.5",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "check-dts": "^0.4.1",
    "dual-publish": "^1.0.3",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "nanodelay": "^1.0.6",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2",
    "ws": "^7.4.0",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.ts": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "no-invalid-this": "off"
    },
    "overrides": [
      {
        "files": [
          "server-connection/*.ts",
          "ws-connection/*.ts"
        ],
        "rules": {
          "import/order": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\).",
      "\\d+\\.\\d+ \\W"
    ],
    "dictionary": [
      "Versioning",
      "JSDoc",
      "js",
      "logux",
      "GraphQL",
      "WebSocket",
      "io",
      "ES",
      "TypeDoc",
      "roadmap"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.8.5"
  }
}
